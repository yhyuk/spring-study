<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configureation 2.1//EN" "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<!-- tiles는 모든 것이 이 파일 안에서 구현된다. -->
<tiles-definitions>

	<!-- 모든 페이지에서 사용할 공통 템플릿 -->
	<definition name="*" template="/WEB-INF/views/layout/template.jsp">
	
		<!-- 공용 조각 페이지 -->
		<put-attribute name="asset" value="/WEB-INF/views/inc/asset.jsp" />
		<put-attribute name="header" value="/WEB-INF/views/inc/header.jsp" />
		<put-attribute name="copyright" value="/WEB-INF/views/inc/copyright.jsp" />
		<put-attribute name="init" value="/WEB-INF/views/inc/init.jsp" />
		
		<!-- 주 업무 조각 페이지 -->
		<put-attribute name="main" value="/WEB-INF/views/{1}.jsp" />
		
	</definition>	

</tiles-definitions>