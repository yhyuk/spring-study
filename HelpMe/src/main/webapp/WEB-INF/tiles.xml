	</definition>
		
  	<definition name="lesson.*" template="/WEB-INF/views/layout/template_lesson.jsp">
   
	      <!-- 공용 조각 페이지 -->
	      <put-attribute name="asset" value="/WEB-INF/views/inc/asset.jsp" />
	      <put-attribute name="header" value="/WEB-INF/views/inc/header.jsp" />
	      <put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp" />
	      <put-attribute name="inner" value="/WEB-INF/views/inc/inner.jsp" />
      
	      <!-- 주 업무 페이지 -->
	      <put-attribute name="content" value="/WEB-INF/views/lesson/{1}.jsp"></put-attribute>
      
   	</definition>   
   	
    <definition name="chat.*" template="/WEB-INF/views/layout/template_chat.jsp">
	     <!-- 공용 조각 페이지 -->
	     <put-attribute name="asset" value="/WEB-INF/views/inc/asset.jsp" />
